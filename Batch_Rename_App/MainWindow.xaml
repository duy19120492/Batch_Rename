<Window x:Class="Batch_Rename_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Batch_Rename_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="FistLoad">
    <StackPanel>
        <ComboBox Name="menu" SelectionChanged="SelectRule"/>
        <WrapPanel>
            <Button Click="LoadFileClick">Choose file</Button>
            <TextBlock Name="originFileName"/>
        </WrapPanel>
        <WrapPanel>
            <Label>Preview: </Label>
            <TextBlock Name="previewFileName"/>
        </WrapPanel>
        <Button>Start Batching</Button>
    </StackPanel>
</Window>
